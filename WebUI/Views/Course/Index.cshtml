@model IEnumerable<CourseGetAllResponse>
@{
    ViewData["Title"] = "Courses";
}
@section PageCss {
    <link rel="stylesheet" href="~/css/courses.css">
}

<h2>Courses </h2>

<div class="box flex flex-col items-center">
    <div class="boxes flex flex-col items-center">
        <div class="course-box flex flex-col just-between">
            <div class="top flex items-center just-between" style="width: 100%;">
                <h2 class="title">Popular<span style="font-size: 12px;font-weight: 500;">(this month)</span></h2>
                <a href="./create-course.html" class="pointer flex items-center just-between"><i class="fa-solid fa-plus" style="transition: .05s all; font-size: 15px;margin-top: 1px;margin-right: 2px;"></i> Create course</a>
            </div>

            <div class="courses popular-courses flex items-center just-around">
                @foreach (var item in Model)
                { 
                    var durationInHours = item.Duration / 60.0;

                    <div class="course-card flex flex-col just-between items-center">
                        <div class="thumbnail flex items-center just-center">
                            <img src="@item.ThumbnailPath" alt="course-img">
                        </div>

                        <div class="categories flex items-center">
                            <span class="category">@item.CategoryName</span>
                            @* <span class="category" style="margin-left: 10px;">Development</span> *@
                        </div>

                        <div class="course-name flex items-center">
                            <h4>@item.Title</h4>
                        </div>

                        <div class="author flex items-center">
                            <img src="@item.MentorProfilePath" alt="">
                            <span>Created by <b><a class="author-link" href="profile" style="transition: .2s all;">@item.MentorName</a></b></span>
                        </div>

                        <div class="line"></div>

                        <div class="details flex items-center">
                            <div class="lessons detail flex items-center just-center">
                                <i class="fa-solid fa-video"></i>
                                <span>24 Lessons</span>
                            </div>
                            <div class="duration detail flex items-center just-center" style="margin-left: 20px;">
                                <i class="fa-solid fa-clock"></i>
                                <span>@durationInHours Hours</span>
                            </div>
                        </div>

                        <div class="buttons flex items-center just-between">
                            <div class="rating flex items-center just-center">
                                <i class="fa-solid fa-star"></i>
                                <span>4.4 (12K)</span>
                            </div>
                            <button class="view-course pointer">View course</button>
                        </div>
                    </div>
                }
            </div>
        </div>

