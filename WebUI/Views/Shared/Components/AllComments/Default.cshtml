@model IEnumerable<CommentResponseDto>

<div class="comments flex flex-col">
    @if (Model.Count() == 0)
    {
        <p>No comments</p>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="comment flex flex-col">
                <div class="comment-user flex items-center">
                    <img src="@item.ProfilePath" alt="profile">
                    <span class="username">@item.UserName</span>
                    @if (item.IsMentor)
                    {
                        <span class="author-tag">Author</span>
                    }

                    <span class="date">25.01.2025</span>
                </div>
                <p class="comment-text">@item.Content</p>
            </div>
        }
    }
</div>